doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Todo-app
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css")
        link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Modak&display=swap")
        link(rel="stylesheet", href="index.css")
        script(src="https://kit.fontawesome.com/de01e28cd9.js" crossorigin="anonymous")
    body
        div.app
            div(class="addTodo")
                h1.addTodo-title To-Do App
                form.addTodo-form
                    .form-group
                        label(for="desc_input") Descrição:
                        input(id="desc_input", type="text", class="form-control addTodo-inputs")

                    .form-group
                        label(for="super_input") Supervisor:
                        select(id="super_input", class="form-control addTodo-selector addTodo-inputs")
                            each val in supervisors
                                option #{val.nome}

                    .form-group
                        label(for="datetime_input") Data e Hora:
                        input(id="datetime_input", type="datetime-local", class="form-control addTodo-inputs")
                    
                    .form-group
                        label(for="color_input") Cor:
                        input(id="color_input", type="color", class="form-control addTodo-inputs addTodo-color", value="#df2020")

                    button(id="newToDo",class="btn btn-outline-success btn-lg addTodo-plus", disabled)
                        i(class="fas fa-plus")
            
            div.todos 
                h1.todos-title Pending To-Dos

                ul(class="list-group list-group-flush")
                    li(class="list-group-item todo-item") Test 1
                    li(class="list-group-item todo-item") Test 2
                    li(class="list-group-item todo-item") Test 3

        script(src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous")