doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Todo-app
        link(rel="icon", type="image/png", href="favicon.png")
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css")
        link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Modak&display=swap")
        link(rel="stylesheet", href="index.css")
        script(src="https://kit.fontawesome.com/de01e28cd9.js" crossorigin="anonymous")
    body
        div.app
            div(class="addTodo")
                h1.addTodo-title To-Do App
                div.add-alerts
                form.addTodo-form
                    .form-group
                        label(for="desc_input") Descrição:
                        input(id="desc_input", type="text", class="form-control addTodo-inputs")

                    .form-group
                        label(for="super_input") Supervisor:
                        select(id="super_input", class="form-control addTodo-selector addTodo-inputs")
                            each val in supervisors
                                option(value=val.id) #{val.nome}

                    .form-group
                        label(for="datetime_input") Data e Hora:
                        input(id="datetime_input", type="datetime-local", class="form-control addTodo-inputs")
                    
                    .form-group
                        label(for="color_input") Cor:
                        input(id="color_input", type="color", class="form-control addTodo-inputs addTodo-color", value="#df2020")

                    button(id="add-todo",class="btn btn-outline-success btn-lg addTodo-plus")
                        i(class="fas fa-plus")
            
            div.todos 
                h1.todos-title Pending To-Dos

                table(class="table todo-list")
                    thead(class="thead-dark")
                        tr  
                            th Cor
                            th Descrição
                            th Supervisor
                            th Data
                            th Actions
                    tbody(id="insert-pending")
                        div(class="spinner-border text-primary", role="status")
                            span.sr-only Loading...

            div.todos
                h1.todos-title Finished To-Dos

                table(class="table todo-list")
                    thead(class="thead-dark")
                        tr
                            th Cor
                            th Descrição
                            th Supervisor
                            th Data
                            th Actions
                    tbody(id="insert-finished")
                        div(class="spinner-border text-success", role="status")
                            span.sr-only Loading...


            div.todos
                h1.todos-title Canceled To-Dos

                table(class="table todo-list")
                    thead(class="thead-dark")
                        tr
                            th Cor
                            th Descrição
                            th Supervisor
                            th Data
                            th Actions
                    tbody(id="insert-canceled")
                        div(class="spinner-border text-danger", role="status")
                            span.sr-only Loading...
            
            div.space
        
        div(class="modal fade", id="editModal", tabindex="-1", aria-labelledby="exampleModalLabel", aria-hidden="true")
            div.modal-dialog
                div.modal-content
                    div.modal-header
                        h5.modal-title Edit:
                        button(type="button", class="close", data-dismiss="modal", aria-label="Close")
                            span(aria-hidden="true") &times;

                    div.modal-body
                        div.edit-alerts
                        .form-group
                            label(for="desc_edit") Descrição:
                            input(id="desc_edit", type="text", class="form-control addTodo-inputs")

                        .form-group
                            label(for="super_edit") Supervisor:
                            select(id="super_edit", class="form-control addTodo-selector addTodo-inputs")
                                each val in supervisors
                                    option(value=val.id) #{val.nome}

                        .form-group
                            label(for="datetime_edit") Data e Hora:
                            input(id="datetime_edit", type="datetime-local", class="form-control addTodo-inputs")

                        .form-group
                            label(for="color_edit") Cor:
                            input(id="color_edit", type="color", class="form-control addTodo-inputs addTodo-color", value="#df2020")

                    div.modal-footer
                        button(class="btn btn-outline-danger", data-dismiss="modal") Close
                        button(id="editSave",class="btn btn-outline-success") Save

        script(src="jquery.js")
        script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous")
        script(src="aux.js")
        script(src="app.js")